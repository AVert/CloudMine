COUNT=`cat $PROJECT_CLOUD/conf/.monitor|wc -l`
while [ $COUNT -gt 0 ]
do
VM_ID=$(head -n 1 $PROJECT_CLOUD/conf/.monitor)
sed -i 1d $PROJECT_CLOUD/conf/.monitor
echo $VM_ID >> $PROJECT_CLOUD/conf/.monitor
echo "clearing logs $VM_ID"
COUNT=`expr $COUNT - 1`
VM_IP=`ruby $PROJECT_CLOUD/lib/headnode.rb $VM_ID`
echo "`scp $PROJECT_CLOUD/bin/stop-monitor.sh opennebula@$VM_IP:/home/opennebula`" >>  $PROJECT_CLOUD/logs/sys.log
echo "`ssh opennebula@$VM_IP 'bash -i' /home/opennebula/stop-monitor.sh `" >> $PROJECT_CLOUD/logs/sys.log
done

